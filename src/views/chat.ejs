<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

    <body class="hidden">
        <div class="centrado" id="onload">
            <div class="lds-default">
                <% for (let i=0; i < 12; i++) { %>
                    <div></div>
                    <% } %>
            </div>
        </div>

        <%- include('partials/navbar') %>
            <div id="particles-js"></div>


            <div class="product-detail">
                <div class="product-images">
                    <div class="image-carousel">
                        <img src="/img/catalog/<%= product.imagen1 %>" onclick="imgClick('/img/catalog/<%= product.imagen1 %>')">
                        <img src="/img/catalog/<%= product.imagen2 %>" onclick="imgClick('/img/catalog/<%= product.imagen2 %>')">
                        <img src="/img/catalog/<%= product.imagen3 %>" onclick="imgClick('/img/catalog/<%= product.imagen3 %>')">
                        <!-- Agrega más imágenes aquí -->
                    </div>
                    <div class="main-image">
                        <img src="/img/catalog/<%= product.imagen1 %>" class="slide" alt="Imagen Principal">
                    </div>

                </div>
                <div class="product-info">
                    <h1 class="prod-info"><%= product.nombre %></h1>
                    <p class="prod-info"><%= product.descripción %></p>
                    <p class="prod-info">Talles disponibles: <%= product.talle%></p>
                    <p class="prod-info">Precio: <%= product.precio%></p>
                    <button id="retro"><a href="/catalogo"><i class="fa-solid fa-arrow-left"></i>Volver</a></button>
                </div>
            </div>

        


            <a href="https://wa.me/c/5493584903900?utm_medium=social&utm_source=heylink.me" class="btn-wsp"
                target="_blank">
                <i class="fa-brands fa-whatsapp"></i>
            </a>



            <%- include('partials/footer') %>


                <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
                <script src="/js/app.js"></script>
                <script src="/js/detail.js"></script>
                <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
                <script src="/js/loader.js"></script>
                <script src="/js/lightbox-plus-jquery.min.js"></script>
    </body>

</html>